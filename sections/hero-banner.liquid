        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        },
        {
          "value": "accent",
          "label": "Accent"
        }
      ],
      "default": "primary"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Second Button Label"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Second Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "tagline": "New Collection",
        "heading": "Define Your Style",
        "description": "Discover our latest streetwear collection featuring bold designs and premium quality materials.",
        "button_label": "Shop Now"
