<section class="featured-products section-padding">
  <div class="container">
    {% if section.settings.heading %}
      <div class="section-header text-center mb-xl">
        {% if section.settings.tagline %}
          <p class="section-tagline">{{ section.settings.tagline }}</p>
        {% endif %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
        {% if section.settings.description %}
          <p class="section-description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.collection %}
      <div class="product-grid grid grid--{{ section.settings.products_per_row }}-col">
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          <div class="product-card">
            <div class="product-card__media">
              <a href="{{ product.url }}" class="product-card__link">
                {% if product.featured_media %}
                  <img 
                    src="{{ product.featured_media | image_url: width: 600 }}" 
                    alt="{{ product.featured_media.alt | escape }}"
                    loading="lazy"
                    width="600"
                    height="{{ 600 | divided_by: product.featured_media.aspect_ratio }}"
                    class="product-card__image"
                  >
                  
                  {% if product.media[1] %}
                    <img 
                      src="{{ product.media[1] | image_url: width: 600 }}" 
                      alt="{{ product.media[1].alt | escape }}"
                      loading="lazy"
                      width="600"
                      height="{{ 600 | divided_by: product.media[1].aspect_ratio }}"
                      class="product-card__image product-card__image--hover"
                    >
                  {% endif %}
                {% else %}
                  <div class="product-card__placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                
                {% if product.compare_at_price > product.price %}
                  <span class="product-badge product-badge--sale">Sale</span>
                {% endif %}
                
                {% unless product.available %}
                  <span class="product-badge product-badge--sold-out">Sold Out</span>
                {% endunless %}
              </a>

              <div class="product-card__actions">
                <button class="btn btn--accent product-card__add-to-cart" data-product-id="{{ product.id }}">
                  {% if product.available %}
                    Quick Add
                  {% else %}
                    Sold Out
                  {% endif %}
                </button>
              </div>
            </div>

            <div class="product-card__content">
              <h3 class="product-card__title">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>
              
              {% if product.vendor and section.settings.show_vendor %}
                <p class="product-card__vendor">{{ product.vendor }}</p>
              {% endif %}

              <div class="product-card__price">
                {% if product.compare_at_price > product.price %}
                  <span class="price price--sale">{{ product.price | money }}</span>
                  <span class="price price--compare">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span class="price">{{ product.price | money }}</span>
                {% endif %}
              </div>

              {% if section.settings.show_rating and product.metafields.reviews.rating.value %}
                <div class="product-card__rating">
                  <div class="rating">
                    <div class="rating__stars" style="--rating: {{ product.metafields.reviews.rating.value }}">
                      ★★★★★
                    </div>
                    <span class="rating__count">({{ product.metafields.reviews.rating_count }})</span>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all and section.settings.collection %}
        <div class="section-footer text-center mt-xl">
          <a href="{{ section.settings.collection.url }}" class="btn btn--secondary">
            View All {{ section.settings.collection.title }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="text-center">
        <p>No collection selected. Please select a collection in the section settings.</p>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .featured-products {
    background-color: var(--color-background);
  }

  .section-padding {
    padding: var(--spacing-xxl) 0;
  }

  .section-header {
    max-width: 600px;
    margin: 0 auto;
  }

  .section-tagline {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
  }

  .section-heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-sm);
  }

  .section-description {
    color: var(--color-text-light);
    font-size: 1.125rem;
  }

  /* Product Grid */
  .product-grid {
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  /* Product Card */
  .product-card {
    position: relative;
    border-radius: var(--radius-medium);
    overflow: hidden;
    transition: var(--transition-medium);
  }

  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
  }

  .product-card__media {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background-color: var(--color-border);
  }

  .product-card__link {
    display: block;
    position: relative;
    width: 100%;
    height: 100%;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: var(--transition-medium);
  }

  .product-card__image--hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }

  .product-card:hover .product-card__image--hover {
    opacity: 1;
  }

  .product-card:hover .product-card__image:not(.product-card__image--hover) {
    opacity: 0;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-border);
  }

  .product-card__placeholder svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  /* Product Badge */
  .product-badge {
    position: absolute;
    top: var(--spacing-sm);
    left: var(--spacing-sm);
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-small);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    z-index: 2;
  }

  .product-badge--sale {
    background-color: var(--color-accent);
    color: white;
  }

  .product-badge--sold-out {
    background-color: var(--color-text-light);
    color: white;
  }

  /* Product Actions */
  .product-card__actions {
    position: absolute;
    bottom: var(--spacing-sm);
    left: var(--spacing-sm);
    right: var(--spacing-sm);
    opacity: 0;
    transform: translateY(10px);
    transition: var(--transition-medium);
    z-index: 3;
  }

  .product-card:hover .product-card__actions {
    opacity: 1;
    transform: translateY(0);
  }

  .product-card__add-to-cart {
    width: 100%;
    font-size: 0.875rem;
    padding: var(--spacing-xs) var(--spacing-sm);
  }

  .product-card__add-to-cart:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  /* Product Content */
  .product-card__content {
    padding: var(--spacing-md);
    background-color: var(--color-background);
  }

  .product-card__title {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.3;
    margin-bottom: var(--spacing-xs);
  }

  .product-card__title a {
    color: var(--color-text);
    text-decoration: none;
    transition: var(--transition-fast);
  }

  .product-card__title a:hover {
    color: var(--color-accent);
  }

  .product-card__vendor {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-xs);
  }

  .product-card__price {
    margin-bottom: var(--spacing-sm);
  }

  .price {
    font-weight: 600;
    font-size: 1.125rem;
  }

  .price--sale {
    color: var(--color-accent);
  }

  .price--compare {
    text-decoration: line-through;
    color: var(--color-text-light);
    font-weight: 400;
    margin-left: var(--spacing-xs);
  }

  /* Rating */
  .product-card__rating {
    margin-top: var(--spacing-xs);
  }

  .rating {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .rating__stars {
    color: #ffd700;
    position: relative;
    display: inline-block;
  }

  .rating__stars::before {
    content: "★★★★★";
    position: absolute;
    top: 0;
    left: 0;
    width: calc(var(--rating) / 5 * 100%);
    overflow: hidden;
    color: #ffd700;
  }

  .rating__count {
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .section-padding {
      padding: var(--spacing-xl) 0;
    }

    .product-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--spacing-md);
    }

    .product-card__actions {
      opacity: 1;
      transform: translateY(0);
      position: static;
      margin-top: var(--spacing-sm);
    }
  }

  @media (max-width: 480px) {
    .product-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--spacing-sm);
    }
  }
{% endstylesheet %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Quick add to cart functionality
    const quickAddButtons = document.querySelectorAll('.product-card__add-to-cart');
    
    quickAddButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        
        const productId = this.dataset.productId;
        const originalText = this.textContent;
        
        // Disable button and show loading state
        this.disabled = true;
        this.textContent = 'Adding...';
        
        // Here you would typically make an AJAX call to add the product to cart
        // For now, we'll simulate the action
        setTimeout(() => {
          this.textContent = 'Added!';
          
          setTimeout(() => {
            this.disabled = false;
            this.textContent = originalText;
          }, 1500);
        }, 500);
      });
    });
  });
</script>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Featured"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Popular Products"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to show",
      "default": 8
    },
    {
      "type": "select",
      "id": "products_per_row",
      "label": "Products per row",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "4"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show product rating",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View all' button",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured Products",
      "settings": {
        "tagline": "Featured",
        "heading": "Popular Products",
        "products_to_show": 8,
        "products_per_row": "4"
      }
    }
  ]
}
{% endschema %}
