<footer class="footer">
  <div class="footer__main">
    <div class="container">
      <div class="footer__content">
        <!-- Brand Column -->
        <div class="footer__column footer__column--brand">
          <div class="footer__logo">
            {% if settings.logo %}
              <img 
                src="{{ settings.logo | image_url: width: 200 }}" 
                alt="{{ shop.name }}"
                loading="lazy"
                width="200"
                height="{{ 200 | divided_by: settings.logo.aspect_ratio }}"
              >
            {% else %}
              <h3 class="footer__brand-name">{{ shop.name }}</h3>
            {% endif %}
          </div>
          
          {% if settings.brand_tagline %}
            <p class="footer__tagline">{{ settings.brand_tagline }}</p>
          {% endif %}
          
          <p class="footer__description">{{ section.settings.description | default: 'Premium streetwear for the culture.' }}</p>
          
          <!-- Social Media -->
          {% if settings.social_instagram or settings.social_tiktok or settings.social_twitter or settings.social_youtube %}
            <div class="footer__social">
              <h4 class="footer__social-title">Follow Us</h4>
              <div class="social-links">
                {% if settings.social_instagram %}
                  <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
