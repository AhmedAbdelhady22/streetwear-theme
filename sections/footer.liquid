                    </svg>
                  </a>
                {% endif %}
                
                {% if settings.social_tiktok %}
                  <a href="{{ settings.social_tiktok }}" target="_blank" rel="noopener" aria-label="TikTok">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                    </svg>
                  </a>
                {% endif %}
                
                {% if settings.social_twitter %}
                  <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  </a>
                {% endif %}
                
                {% if settings.social_youtube %}
                  <a href="{{ settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                    </svg>
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>

        <!-- Navigation Columns -->
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'link_list' %}
              <div class="footer__column" {{ block.shopify_attributes }}>
                {% if block.settings.heading %}
                  <h4 class="footer__heading">{{ block.settings.heading }}</h4>
                {% endif %}
                
                {% if block.settings.menu %}
                  <ul class="footer__list">
                    {% for link in linklists[block.settings.menu].links %}
                      <li class="footer__item">
                        <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
              
            {% when 'text' %}
              <div class="footer__column" {{ block.shopify_attributes }}>
                {% if block.settings.heading %}
                  <h4 class="footer__heading">{{ block.settings.heading }}</h4>
                {% endif %}
                
                {% if block.settings.content %}
                  <div class="footer__text">{{ block.settings.content }}</div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}

        <!-- Newsletter Signup -->
        {% if section.settings.show_newsletter %}
          <div class="footer__column footer__column--newsletter">
            <h4 class="footer__heading">{{ section.settings.newsletter_heading | default: 'Stay Updated' }}</h4>
            <p class="footer__newsletter-text">{{ section.settings.newsletter_text | default: 'Get the latest drops and exclusive offers.' }}</p>
            
            <form class="newsletter-form" action="/contact#contact_form" method="post" accept-charset="UTF-8">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="âœ“">
              
              <div class="newsletter-form__fields">
                <input 
                  type="email" 
                  name="contact[email]" 
                  placeholder="Enter your email"
                  class="newsletter-form__input"
                  required
                  aria-label="Email address"
                >
                <button type="submit" class="newsletter-form__button btn btn--accent">
                  Subscribe
                </button>
              </div>
            </form>
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Footer Bottom -->
  <div class="footer__bottom">
    <div class="container">
      <div class="footer__bottom-content">
        <div class="footer__copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
        </div>
        
        {% if section.settings.show_payment_icons %}
          <div class="footer__payment">
            <span class="footer__payment-label">We accept:</span>
            <div class="payment-icons">
              {% for type in shop.enabled_payment_types %}
                {{ type | payment_type_svg_tag: class: 'payment-icon' }}
              {% endfor %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% stylesheet %}
  .footer {
    background-color: var(--color-primary);
    color: var(--color-secondary);
    margin-top: auto;
  }

  .footer__main {
    padding: var(--spacing-xxl) 0 var(--spacing-xl);
  }

  .footer__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-xl);
  }

  .footer__column--brand {
    grid-column: span 2;
    max-width: 400px;
  }

  .footer__column--newsletter {
    grid-column: span 2;
  }

  /* Brand Section */
  .footer__logo img {
    max-width: 150px;
    height: auto;
    margin-bottom: var(--spacing-sm);
  }

  .footer__brand-name {
    font-size: 1.5rem;
    font-weight: var(--font-heading--weight);
    margin-bottom: var(--spacing-sm);
    color: var(--color-secondary);
  }

  .footer__tagline {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: var(--spacing-sm);
    font-weight: 600;
  }

  .footer__description {
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
    opacity: 0.9;
  }

  /* Social Media */
  .footer__social-title {
    font-size: 1rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-secondary);
  }

  .social-links {
    display: flex;
    gap: var(--spacing-sm);
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: var(--radius-small);
    color: var(--color-secondary);
    transition: var(--transition-fast);
  }

  .social-links a:hover {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  /* Navigation Lists */
  .footer__heading {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: var(--spacing-md);
    color: var(--color-secondary);
  }

  .footer__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer__item {
    margin-bottom: var(--spacing-xs);
  }

  .footer__link {
    color: var(--color-secondary);
    text-decoration: none;
    opacity: 0.8;
    transition: var(--transition-fast);
    line-height: 1.5;
  }

  .footer__link:hover {
    opacity: 1;
    color: var(--color-accent);
  }

  .footer__text {
    line-height: 1.6;
    opacity: 0.9;
  }

  /* Newsletter */
  .footer__newsletter-text {
    margin-bottom: var(--spacing-md);
    opacity: 0.9;
    line-height: 1.5;
  }

  .newsletter-form__fields {
    display: flex;
    gap: var(--spacing-xs);
  }

  .newsletter-form__input {
    flex: 1;
    padding: var(--spacing-sm);
    border: 1px solid rgba(255, 255, 255, 0.3);
    background-color: rgba(255, 255, 255, 0.1);
    color: var(--color-secondary);
    border-radius: var(--radius-small);
    font-size: 0.875rem;
  }

  .newsletter-form__input::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .newsletter-form__input:focus {
    outline: none;
    border-color: var(--color-accent);
    background-color: rgba(255, 255, 255, 0.15);
  }

  .newsletter-form__button {
    padding: var(--spacing-sm) var(--spacing-md);
    font-size: 0.875rem;
    white-space: nowrap;
  }

  /* Footer Bottom */
  .footer__bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--spacing-lg) 0;
  }

  .footer__bottom-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .footer__copyright {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .footer__payment {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .footer__payment-label {
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .payment-icons {
    display: flex;
    gap: var(--spacing-xs);
  }

  .payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.8;
    transition: var(--transition-fast);
  }

  .payment-icon:hover {
    opacity: 1;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer__column--brand,
    .footer__column--newsletter {
      grid-column: span 1;
    }
  }

  @media (max-width: 768px) {
    .footer__main {
      padding: var(--spacing-xl) 0;
    }

    .footer__content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }

    .footer__column--brand,
    .footer__column--newsletter {
      grid-column: span 1;
    }

    .newsletter-form__fields {
      flex-direction: column;
    }

    .footer__bottom-content {
      flex-direction: column;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .footer__content {
      gap: var(--spacing-md);
    }

    .social-links a {
      width: 36px;
      height: 36px;
    }
  }
{% endstylesheet %}

