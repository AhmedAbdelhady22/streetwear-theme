[
  {
    "name": "theme_info",
    "theme_name": "Streetwear Pro",
    "theme_version": "1.0.0",
    "theme_author": "Ahmed",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Brand Settings",
    "settings": [
      {
        "type": "header",
        "content": "Brand Identity"
      },
      {
        "type": "text",
        "id": "brand_name",
        "label": "Brand Name",
        "info": "Leave empty to use your store name",
        "placeholder": "Enter your brand name"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      },
      {
        "type": "text",
        "id": "brand_tagline",
        "label": "Brand Tagline",
        "default": "Authentic Streetwear Culture"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color", 
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#ff6b35"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#000000"
      },
      {
        "type": "color",
        "id": "color_text_light",
        "label": "Light Text Color",
        "default": "#666666"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Fonts"
      },
      {
        "type": "font_picker",
        "id": "type_primary_font",
        "default": "work_sans_n4",
        "label": "Primary Font"
      },
      {
        "type": "font_picker",
        "id": "type_heading_font",
        "default": "work_sans_n6",
        "label": "Heading Font"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "Page Width",
        "options": [
          {
            "value": "90rem",
            "label": "Narrow"
          },
          {
            "value": "110rem",
            "label": "Wide"
          },
          {
            "value": "130rem",
            "label": "Extra Wide"
          }
        ],
        "default": "110rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Page Margin",
        "default": 20
      }
    ]
  },
  {
    "name": "Navigation",
    "settings": [
      {
        "type": "header",
        "content": "Header Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_sticky_header",
        "label": "Enable Sticky Header",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_search_icon",
        "label": "Show Search Icon",
        "default": true
      },
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main Menu"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Links"
      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_tiktok",
        "label": "TikTok URL"
      },
      {
        "type": "text",
        "id": "social_twitter",
        "label": "Twitter URL"
      },
      {
        "type": "text",
        "id": "social_youtube",
        "label": "YouTube URL"
      }
    ]
  }
]
